{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template for Solr, Zookeeper, AMQ Stack",
    "Mappings": {
        "RegionMap": {
            "us-east-1": {
                "AMIBASE": "ami-fce3c696",
                "AMITRANSCODER": "ami-39091e53"
            }
        }
    },
    "Parameters": {
        "BaseURL": {
            "Default": "mediaplatformdev.com",
            "Description": "This is the base URL for the environment",
            "Type": "String"
        },
        "CertName": {
            "AllowedValues": [
                "arn:aws:iam::314826648217:server-certificate/star-mediaplatformdev-2017",
                "arn:aws:iam::314826648217:server-certificate/mediaplatformQA_2017Mar05"
            ],
            "ConstraintDescription": "must select a valid existing cert",
            "Default": "arn:aws:iam::314826648217:server-certificate/mediaplatformQA_2017Mar05",
            "Description": "This has to be the right certificate for the environment",
            "Type": "String"
        },
        "DeploymentEnvironment": {
            "Default": "DEV",
            "Description": "Environment you are building (DEV,QA,STG,PROD)",
            "Type": "String"
        }
    },
    "Resources": {
        "AllAccessForZookeeper": {
            "Properties": {
                "FromPort": "0",
                "GroupId": {
                    "Ref": "zookeepergroup"
                },
                "IpProtocol": "TCP",
                "SourceSecurityGroupId": {
                    "Ref": "zookeepergroup"
                },
                "ToPort": "65535"
            },
            "Type": "AWS::EC2::SecurityGroupIngress"
        },
        "amq0": {
            "Properties": {
                "IamInstanceProfile": "s3_access",
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMIBASE"
                    ]
                },
                "InstanceType": "t2.medium",
                "KeyName": "ivtec2dev",
                "SecurityGroupIds": [
                    {
                        "Ref": "amqgroup"
                    }
                ],
                "SubnetId": "subnet-f586d883",
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "DeploymentEnvironment"
                        }
                    },
                    {
                        "Key": "Name",
                        "Value": "amq"
                    },
                    {
                        "Key": "Role",
                        "Value": "zookeeperrole"
                    },
                    {
                        "Key": "zookeeperrole",
                        "Value": ""
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        },
        "amq1": {
            "Properties": {
                "IamInstanceProfile": "s3_access",
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMIBASE"
                    ]
                },
                "InstanceType": "t2.medium",
                "KeyName": "ivtec2dev",
                "SecurityGroupIds": [
                    {
                        "Ref": "amqgroup"
                    }
                ],
                "SubnetId": "subnet-c75004fa",
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "DeploymentEnvironment"
                        }
                    },
                    {
                        "Key": "Name",
                        "Value": "amq"
                    },
                    {
                        "Key": "Role",
                        "Value": "zookeeperrole"
                    },
                    {
                        "Key": "zookeeperrole",
                        "Value": ""
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        },
        "amqgroup": {
            "Properties": {
                "GroupDescription": "Security Group for amqgroup Access",
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 80,
                        "IpProtocol": "TCP",
                        "ToPort": 80
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 443,
                        "IpProtocol": "TCP",
                        "ToPort": 443
                    },
                    {
                        "CidrIp": "192.186.2.0/24",
                        "FromPort": 0,
                        "IpProtocol": "TCP",
                        "ToPort": 65535
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 61616,
                        "IpProtocol": "TCP",
                        "ToPort": 61616
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 8161,
                        "IpProtocol": "TCP",
                        "ToPort": 8161
                    },
                    {
                        "CidrIp": "10.0.0.0/16",
                        "FromPort": 22,
                        "IpProtocol": "TCP",
                        "ToPort": 22
                    }
                ],
                "VpcId": "vpc-c1163ca4"
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "corf": {
            "Properties": {
                "Actions": [
                    {
                        "TargetGroupArn": "smorf",
                        "Type": "forward"
                    }
                ],
                "Conditions": [
                    {
                        "Field": "path-pattern",
                        "Values": [
                            "/api/*"
                        ]
                    }
                ],
                "ListenerArn": {
                    "Ref": {
                        "Ref": "smorflistener"
                    }
                },
                "Priority": "1"
            },
            "Type": "AWS::ElasticLoadBalancingV2::ListenerRule"
        },
        "dorf": {
            "Properties": {
                "Name": "dorf",
                "Scheme": "internet-facing",
                "Subnets": [
                    "subnet-c75004fa",
                    "subnet-f586d883",
                    "subnet-ca51a991"
                ]
            },
            "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer"
        },
        "smorf": {
            "Properties": {
                "HealthCheckIntervalSeconds": 30,
                "HealthCheckProtocol": "HTTP",
                "HealthCheckTimeoutSeconds": 10,
                "HealthyThresholdCount": 4,
                "Matcher": {
                    "HttpCode": "200"
                },
                "Name": "smorf",
                "Port": 80,
                "Protocol": "HTTP",
                "Targets": [
                    {
                        "Id": "solr",
                        "Port": 80
                    }
                ],
                "UnhealthyThresholdCount": 3,
                "VpcId": "vpc-c1163ca4"
            },
            "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
        },
        "smorflistener": {
            "Properties": {
                "DefaultActions": [
                    {
                        "TargetGroupArn": {
                            "Ref": "smorf"
                        },
                        "Type": "forward"
                    }
                ],
                "LoadBalancerArn": {
                    "Ref": "dorf"
                },
                "Port": 80,
                "Protocol": "HTTP"
            },
            "Type": "AWS::ElasticLoadBalancingV2::Listener"
        },
        "solr0": {
            "Properties": {
                "IamInstanceProfile": "s3_access",
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMIBASE"
                    ]
                },
                "InstanceType": "t2.medium",
                "KeyName": "ivtec2dev",
                "SecurityGroupIds": [
                    {
                        "Ref": "solrgroup"
                    }
                ],
                "SubnetId": "subnet-c75004fa",
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "DeploymentEnvironment"
                        }
                    },
                    {
                        "Key": "Name",
                        "Value": "solr"
                    },
                    {
                        "Key": "Role",
                        "Value": "zookeeperrole"
                    },
                    {
                        "Key": "zookeeperrole",
                        "Value": ""
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        },
        "solr1": {
            "Properties": {
